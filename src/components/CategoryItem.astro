---
// ./src/components/CategoryItem.astro

import type { kb_category } from "../lib/butter";
export type Props = {
  category: kb_category;
};
const { category } = Astro.props;
---

<a href={`category/${category.slug}`}>
  <article class="category-item group">
    <h3 class="name">{category.name}</h3>
    <p>{category.description}</p>
  </article>
</a>
<style>
  .category-item {
    @apply block h-full p-6 px-8 bg-white dark:bg-slate-700 rounded-3xl cursor-pointer;
    @apply transition hover:bg-purple-600 hover:text-purple-100;
  }

  .name {
    @apply font-light text-4xl text-purple-600 dark:text-purple-100 group-hover:text-purple-100 mb-4;
  }
</style>
